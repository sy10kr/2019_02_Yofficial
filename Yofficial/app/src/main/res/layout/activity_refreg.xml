<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9800"
    tools:context=".RefregActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/refreg_editSearch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/youtube_txt_corner"
            android:hint="✎찾으실 재료를 입력하세요."
            android:privateImeOptions="defaultInputmode=korean" />


        <ListView
            android:id="@+id/refreg_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/youtube_txt_corner"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="20dp"
            android:divider="#E2E2E2"
            android:layout_weight="1"
            android:dividerHeight="1dp">

        </ListView>

        <TextView
            android:id="@+id/refreg_ingredient_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택된 재료(동일재료를 누르면 삭제됩니다!)\n"
            android:paddingHorizontal="20dp"
            android:background="@drawable/youtube_txt_corner"
            android:layout_margin="20dp"
            android:textColor="#ff7a00"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/refrigerator_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:onClick="mOnPopupClick"
            android:background="#00000000"
            android:textColor="#FFFFFF"
            android:text="냉장고를 부탁해!" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>